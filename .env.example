# Django Farout - Environment Configuration
# Copy this file to .env and update with your actual values

# ---------- Django Settings ----------
SECRET_KEY=generate-with-python-secrets-token-urlsafe-50
DEBUG=False
DJANGO_ENVIRONMENT=production
ALLOWED_HOSTS=localhost,127.0.0.1,test.hugoforge.com

# ---------- Database ----------
POSTGRES_DB=farout
POSTGRES_USER=farout
POSTGRES_PASSWORD=changeme_strong_password_here
DATABASE_URL=postgresql://farout:changeme_strong_password_here@db:5432/farout

# ---------- Discord OAuth ----------
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here

# Redirect URI format: https://your-domain.com/accounts/discord/login/callback/
# Local development: http://localhost:8000/accounts/discord/login/callback/
# Production: https://test.hugoforge.com/accounts/discord/login/callback/

# ---------- Default Admin User ----------
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=TorOve78!
DEFAULT_ADMIN_EMAIL=admin@farout.com

# ---------- Email Configuration (Production) ----------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@farout.com
ADMIN_EMAIL=admin@farout.com

# ---------- Security (Production) ----------
SECURE_SSL_REDIRECT=True

# ---------- Logging ----------
LOG_LEVEL=INFO

# ---------- Development Settings ----------
# For local development, create a .env file with:
# DEBUG=True
# DJANGO_ENVIRONMENT=development
# ALLOWED_HOSTS=*
# DATABASE_URL=postgresql://farout:changeme@localhost:5432/farout
# SECURE_SSL_REDIRECT=False

# ---------- Star Citizen API Configuration ----------
# Get your API key from: https://starcitizen-api.com/
STAR_CITIZEN_API_KEY=c9EjQgvn3ylgf6PosK8noKmyjjSebVeH
STAR_CITIZEN_API_URL=https://starcitizen-api.com/api/

# Organization SID (e.g., FAROUT)
SC_ORGANIZATION_SID=FAROUT

# ---------- Redis Configuration (Optional - for caching) ----------
REDIS_URL=redis://redis:6379/1

# ---------- API Rate Limiting (Optional) ----------
API_RATE_LIMIT=100/hour

# ---------- Important Notes ----------
# 1. NEVER commit .env file to version control
# 2. Generate SECRET_KEY: python -c "import secrets; print(secrets.token_urlsafe(50))"
# 3. Use strong passwords for production
# 4. Update Discord OAuth redirect URI in Discord Developer Portal
# 5. Change DEFAULT_ADMIN_PASSWORD immediately after first login
# 6. Star Citizen API key is required for ship/org data sync
# 7. Redis is optional but recommended for production caching
