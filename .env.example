# Django Farout - Environment Configuration
# Copy this file to .env and update with your actual values

# ---------- Django Settings ----------
SECRET_KEY=generate-with-python-secrets-token-urlsafe-50
DEBUG=False
DJANGO_ENVIRONMENT=production
ALLOWED_HOSTS=localhost,127.0.0.1,test.hugoforge.com

# ---------- Database ----------
POSTGRES_DB=farout
POSTGRES_USER=farout
POSTGRES_PASSWORD=changeme_strong_password_here
DATABASE_URL=postgresql://farout:changeme_strong_password_here@db:5432/farout

# Communications database (messages, contact forms)
COMMUNICATIONS_DB_URL=postgresql://farout:changeme_strong_password_here@db:5432/farout_communications

# ---------- Discord OAuth (REQUIRED - No other login method available) ----------
# Far Out Corporation uses Discord-only authentication
# Follow these steps to set up:
#
# 1. Go to https://discord.com/developers/applications
# 2. Click "New Application" and give it a name (e.g., "Far Out Corporation")
# 3. Go to "OAuth2" section in the left menu
# 4. Copy your Client ID and Client Secret
# 5. Add these Redirect URIs in the OAuth2 settings:
#    - Local: http://localhost:8000/accounts/discord/login/callback/
#    - Production: https://test.hugoforge.com/accounts/discord/login/callback/
#
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
#
# IMPORTANT: Without these credentials, users cannot login to the site!

# ---------- Star Citizen API ----------
# Get your API key at: https://api.starcitizen-api.com (login with Discord/Google)
# Or via Discord: Join discord and use /api register command in #keys channel
STARCITIZEN_API_KEY=your_starcitizen_api_key_here

# ---------- Default Admin User ----------
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=TorOve78!
DEFAULT_ADMIN_EMAIL=admin@farout.com

# ---------- Email Configuration (Production) ----------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@farout.com
ADMIN_EMAIL=admin@farout.com

# ---------- Security (Production) ----------
SECURE_SSL_REDIRECT=True

# ---------- Logging ----------
LOG_LEVEL=INFO

# ---------- Development Settings ----------
# For local development, create a .env file with:
# DEBUG=True
# DJANGO_ENVIRONMENT=development
# ALLOWED_HOSTS=*
# DATABASE_URL=postgresql://farout:changeme@localhost:5432/farout
# SECURE_SSL_REDIRECT=False

# ---------- Important Notes ----------
# 1. NEVER commit .env file to version control
# 2. Generate SECRET_KEY: python -c "import secrets; print(secrets.token_urlsafe(50))"
# 3. Use strong passwords for production
# 4. Update Discord OAuth redirect URI in Discord Developer Portal
# 5. Change DEFAULT_ADMIN_PASSWORD immediately after first login
