# Database Configuration
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_NAME=farout
DATABASE_USER=farout
DATABASE_PASSWORD=your_secure_password_here

# Auth Database (can be remote)
AUTH_DATABASE_URL=postgresql+asyncpg://farout:your_secure_password_here@db:5432/farout_auth

# Default Admin User (created on first startup)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=Admin123!
DEFAULT_ADMIN_EMAIL=admin@farout.local

# Discord OAuth
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=http://yourdomain.com/api/auth/discord/callback

# JWT Secret (IMPORTANT: Generate a strong random key for production)
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters_change_this_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=7

# CORS - Comma-separated list of allowed origins (no spaces)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Gunicorn Configuration
GUNICORN_WORKERS=2

# Backend Server
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
