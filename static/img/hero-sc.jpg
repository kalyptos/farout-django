<!-- SVG hero image for homepage -->
<svg width="1400" height="700" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="heroGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0a0a15;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#1a1a35;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0f0f20;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="planet" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#3a5a7a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1a2a4a;stop-opacity:1" />
    </radialGradient>
  </defs>

  <!-- Background -->
  <rect width="1400" height="700" fill="url(#heroGrad)" />

  <!-- Stars -->
  <circle cx="100" cy="80" r="1.5" fill="white" opacity="0.9"/>
  <circle cx="300" cy="120" r="1" fill="white" opacity="0.7"/>
  <circle cx="500" cy="90" r="1.2" fill="white" opacity="0.8"/>
  <circle cx="700" cy="150" r="1" fill="white" opacity="0.6"/>
  <circle cx="900" cy="100" r="1.5" fill="white" opacity="0.9"/>
  <circle cx="1100" cy="130" r="1" fill="white" opacity="0.7"/>
  <circle cx="1300" cy="110" r="1.3" fill="white" opacity="0.8"/>
  <circle cx="200" cy="300" r="1" fill="white" opacity="0.8"/>
  <circle cx="400" cy="350" r="1.2" fill="white" opacity="0.6"/>
  <circle cx="600" cy="320" r="1" fill="white" opacity="0.9"/>
  <circle cx="800" cy="380" r="1.5" fill="white" opacity="0.7"/>
  <circle cx="1000" cy="340" r="1" fill="white" opacity="0.8"/>
  <circle cx="1200" cy="370" r="1.2" fill="white" opacity="0.6"/>
  <circle cx="150" cy="500" r="1" fill="white" opacity="0.7"/>
  <circle cx="350" cy="550" r="1.3" fill="white" opacity="0.9"/>
  <circle cx="550" cy="520" r="1" fill="white" opacity="0.6"/>
  <circle cx="750" cy="580" r="1.2" fill="white" opacity="0.8"/>
  <circle cx="950" cy="540" r="1" fill="white" opacity="0.7"/>
  <circle cx="1150" cy="570" r="1.5" fill="white" opacity="0.9"/>
  <circle cx="1350" cy="530" r="1" fill="white" opacity="0.6"/>

  <!-- Planet in background -->
  <circle cx="1100" cy="200" r="120" fill="url(#planet)" opacity="0.4"/>

  <!-- Nebula effect -->
  <ellipse cx="700" cy="350" rx="300" ry="150" fill="#55E6A5" opacity="0.05"/>
  <ellipse cx="700" cy="350" rx="200" ry="100" fill="#BFF747" opacity="0.03"/>

  <!-- Large ship silhouette -->
  <g transform="translate(400, 400) scale(2)">
    <ellipse cx="0" cy="0" rx="80" ry="25" fill="#2a2a4a" opacity="0.7"/>
    <path d="M -50 -15 L -90 -40 L -80 -20 Z" fill="#3a3a5a" opacity="0.6"/>
    <path d="M -50 15 L -90 40 L -80 20 Z" fill="#3a3a5a" opacity="0.6"/>
    <path d="M 50 -15 L 90 -40 L 80 -20 Z" fill="#3a3a5a" opacity="0.6"/>
    <path d="M 50 15 L 90 40 L 80 20 Z" fill="#3a3a5a" opacity="0.6"/>
    <ellipse cx="0" cy="0" rx="10" ry="8" fill="#55E6A5" opacity="0.5"/>
    <!-- Engine glow -->
    <ellipse cx="-70" cy="0" rx="8" ry="4" fill="#55E6A5" opacity="0.8"/>
  </g>

  <!-- Text overlay -->
  <text x="700" y="650" font-family="Arial, sans-serif" font-size="32" font-weight="bold" fill="#55E6A5" text-anchor="middle" opacity="0.3">
    FAR OUT CORPORATION
  </text>
</svg>
